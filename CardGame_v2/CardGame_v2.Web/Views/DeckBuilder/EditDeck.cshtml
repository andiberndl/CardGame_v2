        <div class="col-md-6">
            Card Collection

            <div class="container" style="height: 350px; overflow: auto">

                @foreach (var item in Model.caco)
                {
                    <div class="row col-md-4" style="height:auto ">
                        @{ 
                            var base64 = Convert.ToBase64String(item.Image);
                            var imgSrc = String.Format("data:image/png;base64,{0}", base64);                            
                        }
                        <img class="img-responsive" src="@imgSrc" />
                        <span>@Html.ActionLink("+", "AddCardToDeck", new { id = Model.caco.IndexOf(item)})</span>
                    </div>

                
                }
               
            </div>



           
